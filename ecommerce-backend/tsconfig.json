{
    "compilerOptions": {
      "esModuleInterop": true, 
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2016",      
      "moduleResolution": "node",
      "outDir": "dist",
      "pretty": true,
      "sourceMap": true,
      "rootDir": "src",                          
      "module": "commonjs",                                                            
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                                                  
    },
    "exclude": ["node_modules"],
}